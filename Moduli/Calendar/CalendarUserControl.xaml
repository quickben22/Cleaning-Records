<UserControl x:Class="CleaningRecords.Moduli.CalendarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CleaningRecords.Moduli"
             xmlns:cal="clr-namespace:MonthCalendar;assembly=MonthCalendar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" IsVisibleChanged="UserControl_IsVisibleChanged">


    <UserControl.Resources>
        <local:CleanersWithAllList x:Key="CleanersWithAllList"/>
        <local:TeamsWithAllList x:Key="TeamsWithAllList"/>
        <local:ClientsWithNullList x:Key="ClientsWithNullList"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" ></RowDefinition>
            <RowDefinition Height="*" ></RowDefinition>
        </Grid.RowDefinitions>

        <Button Margin="0,0,400,0" Width="150" Click="NewTab_Click">New Tab</Button>
        <Button Margin="0,0,0,0" Width="150" Click="CloseTab_Click">Close Tab</Button>

        <Button Margin="400,0,0,0" Width="150" Click="RenameTab_Click">Rename Tab</Button>

        <TabControl Grid.Row="1" TabStripPlacement="Top" Name="TabsMain" SelectionChanged="TabsMain_SelectionChanged">
            <TabItem Header="Main Page" Name="MainTab"  >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" ></RowDefinition>
                        <RowDefinition Height="*" ></RowDefinition>
                    </Grid.RowDefinitions>




                    <TextBlock HorizontalAlignment="Left" Margin="20,10,0,0" Text="Cleaner:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <ComboBox Name="test" SelectionChanged="ComboBox_SelectionChanged"  ItemsSource="{Binding Source={StaticResource CleanersWithAllList}}" SelectedValue="{Binding CleanerId, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Key" DisplayMemberPath="Value"  HorizontalAlignment="Left" Margin="70,5,0,0"  VerticalAlignment="Top" Width="160"/>

                    <TextBlock HorizontalAlignment="Left" Margin="270,10,0,0" Text="Team:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <ComboBox SelectionChanged="ComboBox_SelectionChanged"    ItemsSource="{Binding Source={StaticResource TeamsWithAllList}}" SelectedValue="{Binding TeamId, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Key" DisplayMemberPath="Value"  HorizontalAlignment="Left" Margin="310,5,0,0"  VerticalAlignment="Top" Width="160"/>

                    <TextBlock HorizontalAlignment="Left" Margin="490,10,0,0" Text="Client:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <ComboBox SelectionChanged="ComboBox_SelectionChanged"    ItemsSource="{Binding Source={StaticResource ClientsWithNullList}}" SelectedValue="{Binding ClientId, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Key" DisplayMemberPath="Value"  HorizontalAlignment="Left" Margin="530,5,0,0"  VerticalAlignment="Top" Width="160"/>



                    <cal:MonthCalendarControl Grid.Row="1" x:Name="AptCalendar" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"
                                    DisplayMonthChanged="DisplayMonthChanged" DayBoxDoubleClicked="DayBoxDoubleClicked_event"
                                    AppointmentDblClicked="AppointmentDblClicked"/>


                </Grid>
            </TabItem>



        </TabControl>
    </Grid>
</UserControl>
